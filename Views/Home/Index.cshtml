@{
    ViewData["Title"] = "Home Page";
}
@model Survey
<div class="container d-flex align-items-center justify-content-center" style="height: 900px;">
        <div class="border border-primary" style="width: 500px; padding: 20px">
            <form class="col" asp-action="Process" method="post" >
                <div class="row justify-content-between mb-2">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="w-50">
                </div>
                <span class="row text-right text-danger" asp-validation-for="Name"></span>
                <div class="row justify-content-between mb-2">
                    <label asp-for="Location">Location:</label>
                    <select asp-for="Location" id="location" class="w-50">
                        <option value="San Jose">San Jose</option>
                        <option value="D.C.">D.C.</option>
                        <option value="Tulsa">Tulsa</option>
                        <option value="Texas">Texas</option>
                    </select>
                </div>
                <span class="row text-right text-danger" asp-validation-for="Location"></span>
                <div class="row justify-content-between mb-2">
                    <label asp-for="Language">Language:</label>
                    <select asp-for="Language" id="language" class="w-50">
                        <option value="C#">C#</option>
                        <option value="Python">Python</option>
                        <option value="Javascript">Javascript</option>
                        <option value="Ruby">Ruby</option>
                    </select>
                </div>
                <span class="row text-right text-danger" asp-validation-for="Language"></span>
                <div class="row flex-column mb-2">
                    <label asp-for="Comment">Comment(optional):</label>
                    <textarea asp-for="Comment" id="comment" cols="30" rows="10"></textarea>
                </div>
                <span class="row text-right text-danger" asp-validation-for="Comment"></span>
                <div class="row justify-content-end">
                    <button class="btn btn-primary  w-fit mt-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
